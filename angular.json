{
  "$schema": "./node_modules/@angular/cli/lib/config/schema.json",
  "version": 1,
  "newProjectRoot": "colibri",
  "projects": {
    "colibri-button": {
      "projectType": "library",
      "root": "colibri/button",
      "sourceRoot": "colibri/button/src",
      "prefix": "colibri",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "colibri/button/tsconfig.lib.json",
            "project": "colibri/button/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "colibri/button/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "colibri/button/src/test.ts",
            "tsConfig": "colibri/button/tsconfig.spec.json",
            "karmaConfig": "colibri/button/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-eslint/builder:lint",
          "options": {
            "lintFilePatterns": [
              "colibri/button/**/*.ts",
              "colibri/button/**/*.html"
            ]
          }
        }
      }
    },
    "colibri-core": {
      "projectType": "library",
      "root": "colibri/core",
      "sourceRoot": "colibri/core/src",
      "prefix": "colibri",
      "architect": {
        "build": {
          "builder": "@angular-devkit/build-angular:ng-packagr",
          "options": {
            "tsConfig": "colibri/core/tsconfig.lib.json",
            "project": "colibri/core/ng-package.json"
          },
          "configurations": {
            "production": {
              "tsConfig": "colibri/core/tsconfig.lib.prod.json"
            }
          }
        },
        "test": {
          "builder": "@angular-devkit/build-angular:karma",
          "options": {
            "main": "colibri/core/src/test.ts",
            "tsConfig": "colibri/core/tsconfig.spec.json",
            "karmaConfig": "colibri/core/karma.conf.js"
          }
        },
        "lint": {
          "builder": "@angular-devkit/build-angular:tslint",
          "options": {
            "tsConfig": [
              "colibri/core/tsconfig.lib.json",
              "colibri/core/tsconfig.spec.json"
            ],
            "exclude": [
              "**/node_modules/**"
            ]
          }
        }
      }
    }
  },
  "defaultProject": "button"
}
